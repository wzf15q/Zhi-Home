---
// src/pages/index.astro
const tools = [
  {
    name: "Markdown 编辑器",
    desc: "轻量高效的在线 Markdown 编辑工具",
    tags: ["写作", "Markdown", "在线"],
    icon: "✏️"
  },
  {
    name: "图片压缩",
    desc: "无损压缩图片体积，保留画质",
    tags: ["图片", "压缩", "工具"],
    icon: "🖼️"
  },
  {
    name: "JSON 格式化",
    desc: "一键格式化 JSON 代码，支持高亮",
    tags: ["开发", "JSON", "工具"],
    icon: "🔧"
  },
  {
    name: "时间戳转换",
    desc: "Unix 时间戳与普通时间互转",
    tags: ["开发", "时间", "小工具"],
    icon: "⏰"
  }
];
---

<!DOCTYPE html>
<html lang="zh-CN">
<head>
  <meta charset="UTF-8" />
  <meta name="viewport" content="width=device-width, initial-scale=1.0" />
  <title>智汇工具 - 实用在线工具集合</title>
  <link rel="stylesheet" href="/global.css" />
</head>
<body>
  <div class="container">
    <!-- 顶部导航 -->
    <header class="topbar">
      <div class="brand">智汇工具 🛠️</div>
      <div class="actions">
        <button id="themeBtn" class="action-btn">
          <span class="pill">
            <span>🌓</span>
            <span>主题</span>
          </span>
        </button>
        <button class="action-btn">关于</button>
      </div>
    </header>

    <!-- 英雄区 -->
    <section class="hero reveal">
      <h1>实用在线工具集合</h1>
      <p>精选各类高效工具，无需安装，打开即用，提升你的工作效率</p>
    </section>

    <!-- 工具搜索区 -->
    <section class="section reveal">
      <div class="section-head">
        <h2>工具库</h2>
        <p class="section-meta">共 {tools.length} 个工具</p>
      </div>
      
      <div class="tools-search">
        <input type="text" placeholder="搜索工具..." id="searchInput" />
        <select id="categorySelect">
          <option value="all">全部分类</option>
          <option value="writing">写作工具</option>
          <option value="dev">开发工具</option>
          <option value="image">图片工具</option>
        </select>
      </div>

      <!-- 工具卡片网格 -->
      <div class="tools-grid" id="toolsGrid">
        {tools.map((tool, index) => (
          <div class="tool-card reveal" key={tool.name} style={{ transitionDelay: `${index * 50}ms` }}>
            <div class="icon">{tool.icon}</div>
            <h3>{tool.name}</h3>
            <p>{tool.desc}</p>
            <div class="tags">
              {tool.tags.map(tag => (
                <span class="tag" key={tag}>{tag}</span>
              ))}
            </div>
          </div>
        ))}
      </div>
    </section>

    <!-- 公告区 -->
    <div class="notice reveal">
      📢 本站所有工具均为免费使用，数据仅保存在本地，无需担心隐私泄露
    </div>

    <!-- 页脚 -->
    <footer class="footer reveal">
      <p>© 2026 智汇工具 | 简洁 · 高效 · 免费</p>
    </footer>
  </div>

  <!-- 优化后的交互脚本 -->
  <script>
    // 主题切换功能（优化动画）
    const themeBtn = document.getElementById('themeBtn');
    let isDark = localStorage.getItem('theme') === 'dark';
    
    // 初始化主题
    if (isDark) {
      document.documentElement.setAttribute('data-theme', 'dark');
    }
    
    // 平滑切换主题
    themeBtn.addEventListener('click', () => {
      isDark = !isDark;
      if (isDark) {
        document.documentElement.setAttribute('data-theme', 'dark');
        localStorage.setItem('theme', 'dark');
      } else {
        document.documentElement.removeAttribute('data-theme');
        localStorage.setItem('theme', 'light');
      }
      
      // 添加主题切换的过渡动画
      document.body.classList.add('theme-transition');
      setTimeout(() => {
        document.body.classList.remove('theme-transition');
      }, 300);
    });

    // 滚动动画（优化触发时机和性能）
    const revealElements = document.querySelectorAll('.reveal');
    const observer = new IntersectionObserver((entries) => {
      entries.forEach(entry => {
        if (entry.isIntersecting) {
          entry.target.classList.add('is-visible');
        }
      });
    }, {
      threshold: 0.1, // 更早触发动画
      rootMargin: '0px 0px -50px 0px' // 调整触发区域
    });
    
    revealElements.forEach(el => {
      observer.observe(el);
    });

    // 搜索功能（添加输入防抖和动画）
    const searchInput = document.getElementById('searchInput');
    const categorySelect = document.getElementById('categorySelect');
    const toolsGrid = document.getElementById('toolsGrid');
    let searchTimeout;
    
    // 防抖函数
    function debounce(func, delay) {
      return function(...args) {
        clearTimeout(searchTimeout);
        searchTimeout = setTimeout(() => func.apply(this, args), delay);
      };
    }
    
    // 搜索过滤（带动画）
    const filterTools = debounce(() => {
      const searchTerm = searchInput.value.toLowerCase().trim();
      const category = categorySelect.value;
      
      // 先隐藏所有卡片
      document.querySelectorAll('.tool-card').forEach(card => {
        card.style.opacity = '0';
        card.style.transform = 'translateY(10px) scale(0.98)';
      });
      
      // 延迟后显示匹配的卡片
      setTimeout(() => {
        document.querySelectorAll('.tool-card').forEach((card, index) => {
          const name = card.querySelector('h3').textContent.toLowerCase();
          const desc = card.querySelector('p').textContent.toLowerCase();
          const tags = Array.from(card.querySelectorAll('.tag')).map(t => t.textContent.toLowerCase());
          
          const matchesSearch = searchTerm === '' || name.includes(searchTerm) || desc.includes(searchTerm) || tags.some(t => t.includes(searchTerm));
          const matchesCategory = category === 'all' || tags.some(t => {
            if (category === 'writing') return t === '写作';
            if (category === 'dev') return t === '开发';
            if (category === 'image') return t === '图片';
            return false;
          });
          
          if (matchesSearch && matchesCategory) {
            card.style.display = 'grid';
            setTimeout(() => {
              card.style.opacity = '1';
              card.style.transform = 'translateY(0) scale(1)';
              card.style.transitionDelay = `${index * 30}ms`;
            }, 50);
          } else {
            card.style.display = 'none';
          }
        });
      }, 200);
    }, 300);
    
    searchInput.addEventListener('input', filterTools);
    categorySelect.addEventListener('change', filterTools);

    // 页面加载动画
    window.addEventListener('load', () => {
      document.body.classList.add('page-loaded');
    });
  </script>
</body>
</html>